<Window x:Class="Evernote.Views.Loader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Evernote.Views"
        mc:Ignorable="d"
        xmlns:FontAwesome="http://schemas.fontawesome.com/icons/"
        Title="Evernote" Height="300" Width="500" ResizeMode="NoResize">
    <Grid>
        
        <StackPanel Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="0" Margin="10,10,10,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="75"/>
                </Grid.RowDefinitions>
            
            
                <FontAwesome:ImageAwesome Icon="Solid_Spinner" Spin="True" SpinDuration="5" Height="50" Grid.Row="3"/>
                <Label Grid.Row="0" Content="Initializing Evernote" HorizontalContentAlignment="Center" />
                <Label Grid.Row="1" Content="One stop for all your notes!" HorizontalContentAlignment="Center" />
            </Grid>
        </StackPanel>
            
        
    </Grid>
</Window>
